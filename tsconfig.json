{
  "compilerOptions": {
    "module": "esnext",
    "target": "es2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "outDir": "dist",
    "strict": true,
  },
  "ts-node": {
    "esm": true,
  },
  "include": ["src/**/*"],
}